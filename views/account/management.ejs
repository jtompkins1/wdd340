<!-- views/account/management.ejs -->
<!-- content heading - Title Element-->
<% if (title) { %>
<h1><%= title || "Account Management" %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message Block -->
<%- messages() %>

<!-- Display html -->
<div>
  <% if (accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    
    <!-- Link to update account information -->
    <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
    
    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inventory/management">Access Inventory Management</a></p>
    <% } %>
  <% } else { %>
    <p>You are not logged in.</p>
  <% } %>
</div>