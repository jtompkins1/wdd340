<!-- views/account/register.ejs -->
<!-- content heading - Title Element-->
<% if (title) { %>
<h1><%= title || "Register" %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message Block -->
<%- messages() %>

<!-- Display errors if any -->
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Registration form -->
<div class="register">
  <form class="register-form" action="/account/register" method="post">
    <label for="account_firstname">First Name <span class="required">*</span>:</label>
    <input type="text" id="firstname" name="account_firstname" id="accountFirstname" required value="<%= account_firstname %>" required>
    
    <label for="account_lastname">Last Name <span class="required">*</span>:</label>
    <input type="text" id="account_lastname" name="account_lastname" required value="<%= account_lastname %>" required>
    
    <label for="account_email">Email <span class="required">*</span>:</label>
    <input type="email" id="account_email" name="account_email" required value="<%= account_email %>" required>
    
    <label for="account_password">Password <span class="required">*</span>:</label>
    <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    
    <div class="psw-req">
      <p>Password must be at least 12 characters long, include 1 capital letter, 1 number, and 1 special character.</p>
      <p>* Indicates required field.</p>
    </div>
    
    <button type="submit">Register</button>
  </form>
</div>