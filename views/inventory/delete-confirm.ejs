<!-- views/inventory/delete-confirm.ejs -->
<!-- content heading - Title Element-->
<% if (title) { %>
<h1><%= title || "Delete Inventory" %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message Block -->
<%- messages() %>

<!-- Display validation errors if any -->
<% if (errors) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Form delete inventory -->
<form id="deleteForm" action="/inv/delete" method="POST">
    <div class="inventory-form">
        <!-- inv_make -->
        <label for="inv_make">Make:</label>
        <input 
            type="text" 
            id="inv_make" 
            name="inv_make" 
            value="<%= inv_make %>"
            required
            pattern="^[a-zA-Z]{1,50}$"
            title="Make must be alphabetic characters, up to 50 characters, no spaces or special characters." readonly>
        <p>Confirm Deletion - The delete is permanent.</p>
        <!-- inv_model -->
        <label for="inv_model">Model:</label>
        <input 
            type="text" 
            id="inv_model" 
            name="inv_model" 
            value="<%= inv_model %>" 
            required 
            pattern="[a-zA-Z0-9\s]{1,50}" 
            title="Model can include letters, numbers, and spaces, up to 50 characters." readonly
        >
        <p>Confirm Deletion - The delete is permanent.</p>


        <!-- inv_year  -->

        <label for="inv_year">Year:</label>
        <input 
            type="number" 
            id="inv_year" 
            name="inv_year" 
            value="<%= inv_year %>" 
            required 
            min="1900" 
            max="<%= new Date().getFullYear() + 1 %>" 
            title="Year must be between 1900 and next year."
        readonly>
        <p>Confirm Deletion - The delete is permanent.</p>


        <!-- inv_price -->
        <label for="inv_price">Price:</label>
        <input 
            type="number" 
            id="inv_price" 
            name="inv_price" 
            value="<%= inv_price %>" 
            required 
            min="0" 
            step="0.01" 
            title="Price must be a positive number with up to two decimal places."
        >
        <p>Confirm Deletion - The delete is permanent.</p>

 

        <button id="deleteBtn" type="submit">Delete Vehicle</button>

        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>

    </div>

</form>

